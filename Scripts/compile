#!/usr/bin/python3

from rich.console import Console
from time import time
from os import system
from sys import argv

if len(argv) == 2:
    MAIN_CODE_BASE_NAME = argv[1]
else:
    MAIN_CODE_BASE_NAME = "app"

MAIN_CODE_EXTENSION = "cpp"
MAIN_CODE_FILE = MAIN_CODE_BASE_NAME + "." + MAIN_CODE_EXTENSION


console = Console()


def exec(cmd):
    return system(cmd) == 0


def compile():
    start_time = time()
    executed = exec(
        f"g++ -std=c++17 -O2 -DLOCAL {MAIN_CODE_FILE} -o {MAIN_CODE_BASE_NAME}"
    )
    delta = str(round(time() - start_time, 3)) + "s"
    return (executed, delta)


def main():
    success, compile_time = compile()

    if not success:
        console.print(
            f"[bold red][FAIL][/bold red] [bold magenta]{MAIN_CODE_FILE}[/bold magenta] compilation failed"
        )
        return 1
    else:
        console.print(
            f"[bold green][OK][/bold green] [bold magenta]{MAIN_CODE_FILE}[/bold magenta] compiled"
        )
        console.print(
            f"[bold blue]Compile time[/bold blue]: [bold magenta]{compile_time}[/bold magenta]"
        )
        return 0


if __name__ == "__main__":
    main()

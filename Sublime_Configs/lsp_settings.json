{
    "clients": {
        "clangd": {
            "enabled": true,
            "command": [
                "clangd",
                "--header-insertion=never"
            ],
            "selector": "source.c | source.c++ | source.objc | source.objc++"
        }
    },
    "show_diagnostics_panel_on_save": 4,
    "show_diagnostics_count_in_view_status": true,
    "inhibit_word_completions": true,
    "lsp_format_on_save": true
}
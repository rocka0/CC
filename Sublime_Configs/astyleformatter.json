{
    "autoformat_on_save": true,
    "options_default": {
        "add-brackets": true,
        "add-one-line-brackets": true,
        "align-pointer": "type",
        "align-reference": "type",
        "attach-classes": true,
        "attach-extern-c": true,
        "attach-inlines": true,
        "attach-namespaces": true,
        "break-blocks": "default",
        "indent": "spaces",
        "indent-cases": true,
        "indent-classes": true,
        "indent-col1-comments": true,
        "indent-modifiers": true,
        "indent-namespaces": true,
        "indent-switches": true,
        "indent-spaces": 4,
        "max-code-length": -1,
        "pad-comma": true,
        "pad-header": true,
        "pad-oper": true,
        "style": "k&r"
    }
}